{
  "name": "trustcareconnect",
  "version": "1.0.0",
  "type": "module",
  "description": "Minimal MVP healthcare communication app for testing product-market fit on ICP",
  "scripts": {
    "build": "npm run build:frontend",
    "build:frontend": "cd src/frontend && npm run build && cd ../.. && cp -r src/frontend/build/* dist/frontend/",
    "start": "dfx start --background",
    "deploy": "dfx deploy",
    "deploy:local": "dfx deploy --network local",
    "stop": "dfx stop",
    "clean": "dfx canister --network local delete --all && rm -rf dist/",
    "dev": "npm run start && npm run deploy:local",
    "test": "echo 'Tests to be implemented'"
  },
  "keywords": [
    "icp",
    "javascript",
    "react",
    "medical-ai",
    "healthcare",
    "mvp"
  ],
  "dependencies": {
    "@dfinity/agent": "^3.2.1",
    "@dfinity/auth-client": "^3.2.1",
    "@dfinity/candid": "^3.2.1",
    "@dfinity/identity": "^3.2.1",
    "@dfinity/principal": "^3.2.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "azle": "^0.21.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@types/node": "^24.2.1",
    "rollup": "^3.29.5",
    "tslib": "^2.8.1"
  }
}
